
<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>
      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% b = @a.last %>
      <% c = @a.count %>
      <% @a.delete_at(c-1) %>
      <% @a.each do |x| %>
        <tr>
          <td><%=link_to(x[0]) do%><%= x[0].title %><%end%></td>
          <td><%= x[2]%>&nbsp;pc</td>
          <td><%= x[1]%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p> Total price: <%=b%></p>

  
    <%= form.label 'put here your shipping adress:', style: "font-size: 20px;color:black;" %>
    <%= form.text_area :adress, id: :order_adress, style: "border-radius: 5px;" %>
  

   <%= hidden_field_tag 'price', b  %>
   <%= hidden_field_tag 'product_id', @b.product_id  %>

  <div class="actions">
    <%= form.submit 'finish order', class: "waves-effect waves-light btn"%>
  </div>
<% end %>

