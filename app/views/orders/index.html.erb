
<div class="jumbotron" style="margin: 20px;">
  <h1>Orders</h1>
    <% if @orders.empty? %>
      <h3> You haven't order yet </h3>
    <% else %>
      <table>
        <thead>
          <tr>
            <th>Order â„–&nbsp;</th>
            <th>Price&nbsp;</th>
            <th>status&nbsp;</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.id %>&nbsp;&nbsp;</td>
              <td><%= order.price %>&nbsp;</td>
              <% if order.complit%>
