<% b = @a.rating.inject(0.0) { |sum, el| sum + el } / @a.rating.size %>
$(".rate").remove();
$('#rate3').remove();
	for (i = 1; i < 6; i++){
		if (i <= '<%=b%>'){
			$('.rate1').append('<i class="material-icons ">star</i>');
		}else{
			$('.rate1').append('<i class="material-icons ">star_border</i>');
		};
	};
$('.rate1').append('<p id="rate3" style="text-align: center;">Have rated: <%=@a.rating.size %></p>');